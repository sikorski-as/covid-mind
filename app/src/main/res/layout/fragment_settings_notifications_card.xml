<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_default"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/setup_reminder_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:text="@string/settings_setup_reminder_label"
            android:textColor="@color/colorHint"
            android:textSize="@dimen/text_size_heading4" />

        <TextView
            android:id="@+id/setup_reminder_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_default"
            android:text="@string/settings_setup_reminder_sublabel"
            android:textColor="@color/colorHint"
            android:textSize="@dimen/text_size_heading5" />

        <Button
            android:id="@+id/enable_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:text="@string/settings_enable_button_label" />

        <Button
            android:id="@+id/disable_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:text="@string/settings_disable_button_label"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
