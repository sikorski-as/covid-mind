<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:layout_weight="1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mood_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_mood_neutral_24dp" />

    <TextView
        android:id="@+id/mood_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_heading5" />

    <TextView
        android:id="@+id/mood_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_heading4"
        android:textStyle="bold" />
</LinearLayout>
